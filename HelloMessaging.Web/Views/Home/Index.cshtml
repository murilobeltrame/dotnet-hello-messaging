@model HelloMessaging.Web.Models.ChatMessage
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Send your message</p>
    <form asp-action="Index" asp-controller="Home" method="POST">
        <div class="row">
            <div class="form-group">
                <label for="name">User</label>
                <input type="text" class="form-controller required" asp-for="User" placeholder="Type your user...">
            </div>
            <div class="form-group">
                <label for="name">Message</label>
                <input type="text" class="form-controller required" asp-for="Message" placeholder="Type a message...">
            </div>
        </div>
        <button type="submit" class="btn btn-success">Save</button>
    </form>
    @* <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p> *@
</div>
